{
	"application": {
		"footer_text": "Copyright &copy; Complete Employment Check 2015",
		"free_zone": {
			"pages": [{
				"name": "home",
				"components": [{
					"name": "columns",
					"type": "section",
					"dest_position": "before",
					"components": [{
						"name": "services_page",
						"type": "markdown",
						"source_file": "files/section1.md"
					}
					]
				},
				{
					"name": "about",
					"type": "section",
					"dest_position": "before",
					"class": "bg-blue",
					"components": [{
						"name": "about_page",
						"type": "markdown",
						"source_file": "files/section2.md"
					}]
				},
				{
					"name": "services",
					"type": "section",
					"dest_position": "before",
					"components": [{
						"name": "services_page",
						"type": "markdown",
						"source_file": "files/section2.md"
					}]
				},
				{
					"name": "section_contact",
					"type": "section",
					"dest_position": "before",
					"class": "bg-blue",
					"components": [{
						"name": "content_contact",
						"type": "markdown",
						"source_file": "files/section3.md"
					},
					{
						"name": "contact",
						"type": "form",
						"mode": "insert",
						"fields": [{
							"name": "name",
							"title": "Your name",
							"required": true
						},
						{
							"name": "email",
							"title": "Your e-mail",
							"type": "email",
							"required": true
						},
						{
							"name": "message",
							"title": "Message",
							"input": "textarea",
							"required": true
						}],
						"submit_button_title": "Send",
						"submit_code": "Meteor.call('sendMail', { from: values.email, to: \"kim.stadler@completeemploymentcheck.com\", subject: 'Message from ' + values.name, text: values.message }, function(e) {  if(e) errorAction(e.message); else submitAction('Your message is sent. Thank you for contacting us! :)'); } );"
					}]
				}],
				"template_rendered_code": "$('section, .jumbotron').css('min-height', $(window).height() + 'px'); window.scrollTo(0, 0);"
			}],
			"menus": [{
				"name": "main_menu",
				"class": "nav navbar-nav dropdown-menu-right",
				"scroll_spy_selector": "body",
				"items": [{
					"title": "Home",
					"url": "#section1",
					"icon_class": "fa fa-home"
				},
				{
					"title": "About Us",
					"url": "#section2"
				},
				{
					"title": "Contact Us",
					"url": "#section3"
				}]
			}]
		},
		"copy_files": [{
			"source": "files/styles.css",
			"dest": "CLIENT_STYLES_DIR/styles.css"
		},
		{
			"source": "files/cectest.svg",
			"dest": "PUBLIC_IMAGES_DIR/cectest.svg"
		}]
	}
}
